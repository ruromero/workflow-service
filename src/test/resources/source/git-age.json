{
  "metadata": {
    "git-source": "https://github.com/ruromero/kogito-knative",
    "git-branch": "master",
    "git-context": "person-resources",
    "input": [{
      "name": "person",
      "type": "org.acme.kogito.model.Person"
    }]
  },
  "states": {
    "evaluatePerson": {
      "next-state": "specialHandlingCase",
      "start": true,
      "type": "OPERATION",
      "action-mode": "Sequential",
      "actions": [
        {
          "function": "kie:kogito:org.acme.kogito:person-rules.drl"
        }
      ]
    },
    "specialHandlingCase": {
      "type": "SWITCH",
      "choices": [
        {
          "path": "$.person.adult",
          "operator": "EQ",
          "value": "false",
          "next-state": "specialHandling"
        }
      ],
      "default": "endState"
    },
    "specialHandling": {
      "function": "kie:kogito:human-task:SpecialHandlingForChildren",
      "next-state": "endState"
    },
    "endState": {
      "type": "END",
      "status": "SUCCESS"
    }
  }
}